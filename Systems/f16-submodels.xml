<?xml version="1.0"?>

<PropertyList>

  <submodel>
    <name>flares</name>
    <model>Aircraft/f16/Models/Effects/flare.xml</model>
    <trigger>ai/submodels/submodel[0]/flare-release</trigger>
    <speed>100.0</speed>   <!-- ft/sec -->
    <repeat>true</repeat>
    <delay>0.75</delay>
    <count>100</count>
    <x-offset>5.0</x-offset><!-- positive forward -->
    <y-offset>2.0</y-offset><!-- feet -->
    <z-offset>0.1</z-offset>
    <yaw-offset>90.0</yaw-offset>
    <life>5</life>
    <buoyancy>8</buoyancy>
    <eda>1.0</eda>
  </submodel>

  <submodel>
    <name>gun-pod</name>
    <model>Aircraft/f16/Models/Armament/Weapons/M61A1/tracer.xml</model>
    <trigger>fdm/jsbsim/fcs/guntrigger</trigger>
    <speed>2041.0</speed>
    <repeat>true</repeat>
    <delay>0.14</delay>
    <count>-1</count>
    <offsets>
        <x-m> -3.16</x-m>
        <y-m> -0.81</y-m>
        <z-m>  0.17</z-m>
    </offsets>
    <life>2.5</life>
    <wind>false</wind>
    <weight>0.1</weight>
    <cd>0.193</cd>
    <eda>0.00136354</eda>
  </submodel>

  <submodel>
    <name>M61A1 shell</name>
    <model>Models/Geometry/null.ac</model>
    <trigger>fdm/jsbsim/fcs/guntrigger</trigger>
    <speed>2041.0</speed><!-- ft/sec -->
    <repeat>true</repeat>
    <delay>0.01</delay><!-- 6000 per min -->
    <count>-1</count>
    <offsets>
        <x-m> -3.16</x-m>
        <y-m> -0.81</y-m>
        <z-m>  0.17</z-m>
    </offsets>
    <life>10.0</life>
    <wind>false</wind>
    <weight>0.1069</weight>
    <cd>0.193</cd>
    <eda>0.00136354</eda>
    <collision>true</collision>
    <collision-report>sim/ai/aircraft/collision/bullet</collision-report>
    <impact>true</impact>
    <impact-reports>/ai/models/model-impact</impact-reports>
    <submodel-path>Aircraft/f16/Models/Armament/Weapons/M61A1/bullet-submodel.xml</submodel-path>
  </submodel>

  <submodel>
    <name>gunsmoke</name>
    <model>Aircraft/f16/Models/Armament/Weapons/M61A1/smoke.xml</model>
    <trigger>fdm/jsbsim/fcs/guntrigger</trigger>
    <speed>10</speed>
    <repeat>true</repeat>
    <delay>0.01</delay>
    <count>-1</count>
    <offsets>
        <x-m> -3.16</x-m>
        <y-m> -0.81</y-m>
        <z-m>  0.17</z-m>
    </offsets>
    <eda>10</eda>
    <wind>true</wind>
    <buoyancy>33</buoyancy>
    <life>1</life>
  </submodel>

  <submodel>
    <name>rocket explosion</name>
    <model>Aircraft/f16/Models/Armament/Weapons/LAU-68/rocket-explosion.xml</model>
    <speed>0</speed>
    <repeat>false</repeat>
    <delay>0</delay>
    <count>1</count>
    <x-offset>0</x-offset>
    <y-offset>0</y-offset>
    <z-offset>0</z-offset>
    <yaw-offset>0</yaw-offset>
    <pitch-offset>0</pitch-offset>
    <eda>100</eda>
    <wind>false</wind>
    <buoyancy>32.1</buoyancy>
                <aero-stabilised>false</aero-stabilised>
                <fuse-range>0</fuse-range>
    <life>10</life>
  </submodel> 
</PropertyList>
