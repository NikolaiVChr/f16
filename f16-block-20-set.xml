  </help>-->

 </sim>

 <fdm>
  <jsbsim>
   <fcs>
    <fly-by-wire>
      <prototype type="bool">false</prototype>
    </fly-by-wire>
   </fcs>
  </jsbsim>
 </fdm>
 
 <engines>
    <engine>
      <rated-mil-dry type="double">14670</rated-mil-dry>
    </engine>
  </engines>

</PropertyList>
