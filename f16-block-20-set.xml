<?xml version="1.0"?>

<PropertyList include="f16-base.xml">

 <sim>
  <description>General Dynamics F-16AM Block 20</description>
  <long-description>
   The General Dynamics F-16AM Fighting Falcon Mid-life upgrade is an upgrade of older, primary european, F16A Block 10 and 15. It has approx. same capabilities as Block 50.
   With a slightly less powerful engine. This models the small tail variant (upgraded Block 10).
  </long-description>
  <author>Erik Hofman, Pensacola, Martin "Pegasus" Schmitt, Nikolai V. Chr., J Maverick 16, Richard Harrison, Joshua Davidson, Martien Van Der P., Gary Brown, Justin Nicholson, Jonathan Redpath, Timi, Enrico Castaldi</author>
  <status>production</status>
  <rating>
    <FDM type="int">5</FDM>
    <systems type="int">4</systems>
    <cockpit type="int">4</cockpit>
    <model type="int">4</model>
  </rating>
  <flight-model>jsb</flight-model>
  <aero>f16b20</aero>
  <variant-id type="int">2</variant-id>
  <variant-of>f16-block-52</variant-of>
  <tags>
      <tag>fighter</tag>
      <tag>general-dynamics</tag>
      <tag>1970s</tag>
      <tag>coldwar</tag>
      <tag>gulfwar1</tag>
      <tag>gulfwar2</tag>
      <tag>combat</tag>
      <tag>low-wing</tag>
      <tag>hud</tag>
      <tag>ifr</tag>
      <tag>refuel</tag>
      <tag>retractable-gear</tag>
      <tag>supersonic</tag>
      <tag>tricycle</tag>
      <tag>afterburner</tag>
      <tag>jet</tag>
      <tag>single-engine</tag>
      <tag>tail-hook</tag>
      <tag>f-16</tag>
    </tags>

  <startup>
   <splash-texture>Aircraft/f16/f16-splash.png</splash-texture>
  </startup>

  <previews>
            <preview>
                <type>exterior</type>
                <splash type="bool">true</splash>
                <path>gui/splash/f16_b20_1.png</path>
            </preview>
            <preview>
                <type>exterior</type>
                <splash type="bool">true</splash>
                <path>gui/splash/f16_b20_2.png</path>
            </preview>
            <preview>
                <type>exterior</type>
                <splash type="bool">true</splash>
                <path>gui/splash/f16_b20_3.png</path>
            </preview>
  </previews>


  <model>
    <f16>
    <dragchute type="bool">true</dragchute>
    <link16 type="bool">true</link16>
  </f16>
   <path archive="y">Aircraft/f16/Models/F-16.xml</path>
   <livery>
    <file type="string"/>
    <name type="string">RDAF Esk 730, E-602</name>
    <folder type="string">Aircraft/f16/Models/Liveries/Block20</folder>
   </livery>
  </model>

  <menubar>
   <default>
    <menu n="101">
     <label>F-16AM Block 20</label>
           <item n="10">
          <label>Payload quick setup</label>
          <binding>
            <command>dialog-show</command>
            <dialog-name>payload</dialog-name>
          </binding>
      </item>
      <item n="11">
          <label>Program target</label>
          <enabled type="bool">true</enabled>
          <name>programGPS</name>
          <binding>
              <command>dialog-show</command>
              <dialog-name>programGPS</dialog-name>
          </binding>
      </item> 
    </menu>
   </default>
  </menubar>
<!--
  <help>
