<PropertyList>

	<name>controlPanel</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<text>
			<halign>left</halign>
			<label>F-16 Control Panel</label>
			<format>%s Control Panel</format>
			<property>sim/description</property>
		</text>
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>X</legend>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>

	<group>
		<layout>hbox</layout>
		
