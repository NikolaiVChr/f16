<PropertyList>

	<name>controlPanel</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<text>
			<halign>left</halign>
			<label>F-16 Control Panel 1</label>
			<format>%s Control Panel Left</format>
			<property>sim/description</property>
		</text>
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>X</legend>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>

	<group>
		<layout>hbox</layout>
		
		<group>
			<layout>vbox</layout>
			
			<text>
				<label>A/P</label>
			</text>
			
			<group>
				<layout>table</layout>
				
				<group>
					<visible>
						<less-than>
							<property>/sim/variant-id</property>
							<value>2</value>
						</less-than>
					</visible>
					<row>0</row>
					<col>0</col>
					<layout>table</layout>
					
					<checkbox>
						<row>0</row>
						<col>0</col>
						<label>Autopilot Master</label>
						<halign>center</halign>
						<live>true</live>
						<property>/f16/fcs/switch-master</property>
						<binding>
							<command>dialog-apply</command>
						</binding>
					</checkbox>
					
					<group>
						<row>1</row>
						<col>0</col>
						<layout>hbox</layout>
						
						<group>
							<layout>vbox</layout>
							
							<text>
								<label>PITCH      </label>
							</text>
							
							<group>
								<layout>hbox</layout>
						
								<group>
									<layout>vbox</layout>
									<halign>left</halign>
									
									<text>
										<label>ALT HOLD</label>
									</text>
									<text>
										<label>ATT HOLD</label>
									</text>
									
								</group>
								
								<slider>
									<halign>left</halign>
									<property>/f16/fcs/switch-pitch-block15</property>
									<min>0</min>
									<max>1</max>
									<step>1</step>
									<live>true</live>
									<vertical>true</vertical>
									<pref-height>40</pref-height>
									<binding>
										<command>dialog-apply</command>
									</binding>
								</slider>
								
							</group>
						
						</group>
						
						<vrule/>
						
						<group>
							<layout>vbox</layout>
							
							<text>
								<label>ROLL      </label>
							</text>
							
							<group>
								<layout>hbox</layout>
							
								<group>
									<layout>vbox</layout>
									<halign>left</halign>
									
									<text>
										<label>HDG SEL</label>
									</text>
									<text>
										<label>ATT HOLD</label>
									</text>
									
								</group>
								
								<slider>
									<halign>left</halign>
									<property>/f16/fcs/switch-roll-block15</property>
									<min>0</min>
									<max>1</max>
									<step>1</step>
									<live>true</live>
									<vertical>true</vertical>
									<pref-height>40</pref-height>
									<binding>
										<command>dialog-apply</command>
									</binding>
								</slider>
								
							</group>
						
						</group>
						
					</group>
					
				</group>
				
				<group>
					<visible>
						<greater-than-equals>
							<property>/sim/variant-id</property>
							<value>2</value>
						</greater-than-equals>
					</visible>
					<row>0</row>
					<col>0</col>
					<layout>hbox</layout>
					
					<group>
						<layout>vbox</layout>
						
						<text>
							<label>ROLL      </label>
						</text>
						
						<group>
							<layout>hbox</layout>
						
							<group>
								<layout>vbox</layout>
								<halign>left</halign>
								
								<text>
									<label>HDG SEL</label>
								</text>
								<text>
									<label>ATT HOLD</label>
								</text>
								<text>
									<label>STRG SEL</label>
								</text>
								
							</group>
							
							<slider>
								<halign>left</halign>
								<property>/f16/fcs/switch-roll-block20</property>
								<min>-1</min>
								<max>1</max>
								<step>1</step>
								<live>true</live>
								<vertical>true</vertical>
								<binding>
									<command>dialog-apply</command>
								</binding>
							</slider>
							
						</group>
					
					</group>
					
					<vrule/>
					
					<group>
						<layout>vbox</layout>
						
						<text>
							<label>PITCH      </label>
						</text>
						
						<group>
							<layout>hbox</layout>
					
							<group>
								<layout>vbox</layout>
								<halign>left</halign>
								
								<text>
									<label>ALT HOLD</label>
								</text>
								<text>
									<label>A/P OFF</label>
								</text>
								<text>
									<label>ATT HOLD</label>
								</text>
								
							</group>
							
							<slider>
								<halign>left</halign>
								<property>/f16/fcs/switch-pitch-block20</property>
								<min>-1</min>
								<max>1</max>
								<step>1</step>
								<live>true</live>
								<vertical>true</vertical>
								<binding>
									<command>dialog-apply</command>
								</binding>
							</slider>
							
						</group>
					
					</group>
					
				</group>
			
			</group>

			<hrule/>

			<group>
				<layout>vbox</layout>
				
				<text>
					<label>EXT LIGHTS</label>
				</text>
				
				<group>
				    <layout>table</layout>

					    <checkbox>
					    	<row>0</row>
					    	<col>3</col>
						    <property>controls/lighting/ext-lighting-panel/master</property>
						    <live>true</live>
						    <binding>
								<command>nasal</command>
								<script>
								f16_switches.toggleMaster();
								</script>
					      	</binding>
					    </checkbox>
					    <text><row>0</row>
					    	<col>2</col><label>MASTER</label></text>
					    <checkbox>
					    	<row>0</row>
					    	<col>7</col>
						    <property>controls/lighting/ext-lighting-panel/anti-collision</property>
						    <live>true</live>
						    <binding>
								<command>nasal</command>
								<script>
								f16_switches.toggleAntiCollision();
								</script>
					      	</binding>
					    </checkbox>
					    <text><row>0</row>
					    	<col>6</col><label>ANTI-COLL</label></text>
					    	
					    <checkbox>
					    	<row>1</row>
					    	<col>1</col>
						    <property>controls/lighting/ext-lighting-panel/pos-lights-flash</property>
						    <live>true</live>
						    <binding>
								<command>nasal</command>
								<script>
								f16_switches.togglePosLightsFlash();
								</script>
					      	</binding>
					    </checkbox>
					    <text><row>1</row>
					    	<col>0</col><label>FLASH</label></text>
					    <hrule><row>1</row>
					    	<col>2</col></hrule>
					    <hrule><row>1</row>
					    	<col>3</col></hrule>
					    <group>
				    		<row>2</row>
				    		<col>2</col>
							<layout>vbox</layout>
							<halign>left</halign>
							
							<text>
								<label>LAND</label>
							</text>
							<text>
								<label>OFF</label>
							</text>
							<text>
								<label>TAXI</label>
							</text>
							
						</group>
						
						<slider>
							<row>2</row>
				    		<col>3</col>
							<halign>left</halign>
							<property>controls/lighting/landing-light</property>
							<min>-1</min>
							<max>1</max>
							<step>1</step>
							<live>true</live>
							<vertical>true</vertical>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
						        <command>nasal</command>
						        <script>
						        </script>
						    </binding>
						</slider>
					    
					    <text><row>0</row>
					    	<col>0</col><label>WING-TAIL</label></text>
				    	<group>
				    		<row>2</row>
				    		<col>0</col>
							<layout>vbox</layout>
							<halign>left</halign>
							
							<text>
								<label>BRT</label>
							</text>
							<text>
								<label>OFF</label>
							</text>
							<text>
								<label>DIM</label>
							</text>
							
						</group>
						
						<slider>
							<row>2</row>
				    		<col>1</col>
							<halign>left</halign>
							<property>controls/lighting/ext-lighting-panel/wing-tail</property>
							<min>-1</min>
							<max>1</max>
							<step>1</step>
							<live>true</live>
							<vertical>true</vertical>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
						        <command>nasal</command>
						        <script>
						        </script>
						    </binding>
						</slider>
						
						<text><row>1</row>
				    	<col>4</col><label>FORM</label></text>
				    	<group>
				    		<row>2</row>
				    		<col>4</col>
							<layout>vbox</layout>
							<halign>left</halign>
							
							<text>
								<label>BRT</label>
							</text>
							<text>
								<label>OFF</label>
							</text>								
						</group>
						
						<slider>
							<row>2</row>
				    		<col>5</col>
							<halign>left</halign>
							<property>controls/lighting/ext-lighting-panel/form-knob</property>
							<min>0</min>
							<max>1</max>
							<step>0.2</step>
							<live>true</live>
							<vertical>true</vertical>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
						        <command>nasal</command>
						        <script>
						        </script>
						    </binding>
						</slider>
						
						<text><row>1</row>
					    	<col>6</col><label>FUSELAGE</label></text>
				    	<group>
				    		<row>2</row>
				    		<col>6</col>
							<layout>vbox</layout>
							<halign>left</halign>
							
							<text>
								<label>BRT</label>
							</text>
							<text>
								<label>OFF</label>
							</text>
							<text>
								<label>DIM</label>
							</text>
							
						</group>
						
						<slider>
							<row>2</row>
				    		<col>7</col>
							<halign>left</halign>
							<property>controls/lighting/ext-lighting-panel/fuselage</property>
							<min>-1</min>
							<max>1</max>
							<step>1</step>
							<live>true</live>
							<vertical>true</vertical>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
						        <command>nasal</command>
						        <script>
						        </script>
						    </binding>
						</slider>
							
					</group>
			</group>

			<hrule/>
			
		</group>

		<vrule/>

		<group>
			<layout>vbox</layout>

			<text>
				<label>ELECTRIC</label>
			</text>

			<group>
				<layout>hbox</layout>

				<group>
					<layout>vbox</layout>
										
					<group>
						<layout>hbox</layout>
				
						<group>
							<layout>vbox</layout>
							<halign>left</halign>
							
							<text>
								<label>MAIN PWR</label>
							</text>
							<text>
								<label>BATT</label>
							</text>
							<text>
								<label>OFF</label>
							</text>
							
						</group>
						
						<slider>
							<halign>left</halign>
							<property>fdm/jsbsim/elec/switches/main-pwr</property>
							<min>0</min>
							<max>2</max>
							<step>1</step>
							<live>true</live>
							<vertical>true</vertical>
							<binding>
								<command>dialog-apply</command>
							</binding>
						</slider>
						
					</group>
				
				</group>

				<vrule/>

				<group>
					<layout>vbox</layout>
					
					<text>
						<label>EPU</label>
					</text>
					
					<group>
						<layout>hbox</layout>
				
						<group>
							<layout>vbox</layout>
							<halign>left</halign>
							
							<text>
								<label>ON</label>
							</text>
							<text>
								<label>NORM</label>
							</text>
							<text>
								<label>OFF</label>
							</text>
							
						</group>
						
						<slider>
							<halign>left</halign>
							<property>fdm/jsbsim/elec/switches/epu</property>
							<min>0</min>
							<max>2</max>
							<step>1</step>
							<live>true</live>
							<vertical>true</vertical>
							<binding>
								<command>dialog-apply</command>
							</binding>
							<binding>
						        <command>nasal</command>
						        <script>
						          if (getprop("fdm/jsbsim/elec/switches/epu")==1) {
						            setprop("fdm/jsbsim/elec/switches/epu-cover",0);
						          } else {
						            setprop("fdm/jsbsim/elec/switches/epu-cover",1);
						          }
						        </script>
						    </binding>
						</slider>
						
					</group>
				
				</group>

			</group>
			
			<group>
			    <layout>hbox</layout>
			    <text><label>MAL IND LTS</label></text>
			    <checkbox>
			      <property>controls/test/test-panel/mal-ind-lts</property>
			      <live>true</live>
			      <binding>
			          <command>nasal</command>
			          <script>f16_switches.toggleMalIndLts();</script>
			      </binding>
			    </checkbox>
			</group>

			<hrule/>

			<text>
				<label>ENGINE</label>
			</text>

			<group>
				<layout>hbox</layout>

				<group>
					<layout>vbox</layout>

					<group>
					    <layout>hbox</layout>
					    <text><label>ENG FEED NORM</label></text>
					    <checkbox>
					      <property>f16/engine/feed</property>
					      <live>true</live>
					      <binding>
					          <command>property-toggle</command>
					          <property>f16/engine/feed</property>
					      </binding>
					    </checkbox>
					</group>

					<group>
					    <layout>hbox</layout>
					    <text><label>CUTOFF RELEASE</label></text>
					    <checkbox>
					      <property>f16/engine/cutoff-release-lever</property>
					      <live>true</live>
					      <binding>
					          <command>property-toggle</command>
					          <property>f16/engine/cutoff-release-lever</property>
					      </binding>
					    </checkbox>
					</group>

				</group>

				<vrule/>

				<group>
					<layout>hbox</layout>
			
					<group>
						<layout>vbox</layout>
						<halign>left</halign>
						
						<text>
							<label>START 2</label>
						</text>
						<text>
							<label>OFF</label>
						</text>
						<text>
							<label>START 1</label>
						</text>
						
					</group>
					
					<slider>
						<halign>left</halign>
						<property>f16/engine/jfs-start-switch</property>
						<min>-1</min>
						<max>1</max>
						<step>1</step>
						<live>true</live>
						<vertical>true</vertical>
						<binding>
							<command>dialog-apply</command>
						</binding>
					</slider>
					
				</group>

			</group>

			<hrule/>

			<group>
			    <layout>hbox</layout>
			    <button>
			    	<legend>Execute</legend>
				    <binding>
						<command>nasal</command>
						<script>
							if (pylons.fcs != nil and (getprop("f16/avionics/gnd-jett") or !getprop("gear/gear[0]/wow"))) {
								pylons.fcs.jettisonFuelAndAG([0,8]);#drop all fueltanks, dummies and A/G weapons. Except wingtips.
							}
						</script>
			      	</binding>
			      	<color>
      		            <red>1</red>
      		            <green>0.35</green>
      		            <blue>0.35</blue>
      	            </color>
			    </button>
			    <text><label>EMER STORES JETTISON</label></text>
			</group>

			<hrule/>
		
		</group>
		
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		<group>
			<layout>vbox</layout>
			<text><label>IFF</label></text>

			<group>
			    <layout>hbox</layout>
			    <text><label>MODE 4 CHANNEL</label></text>
			    <input>
				  	<width>75</width>
				  	<height>25</height>
				  	<property>instrumentation/iff/channel-selection</property>
				  	<live>true</live>
				  	<halign>left</halign>
			        <binding>
			            <command>dialog-apply</command>
			      	</binding>
			      	<color>
	      				<red>0.44</red>
						<green>0.55</green>
						<blue>0.8</blue>
	      			</color>
				</input>
			</group>
		</group>
		
		<vrule/>
		
		<group>
			<layout>vbox</layout>
			<text><label>HUD max G</label></text>

			<button>
			    	<legend>Reset</legend>
				    <binding>
						<command>property-assign</command>
						<property>f16/avionics/n-reset</property>
						<value>1</value>
			      	</binding>
			    </button>
		</group>
		
		<vrule/>
		
		<group>
			<layout>vbox</layout>
		
			<text>
				<label>GND JETT</label>
			</text>

			<group>
				<layout>hbox</layout>
				
				<empty>
			      <stretch>1</stretch>
			    </empty>
		
				<group>
					<layout>vbox</layout>
					<halign>left</halign>
					
					<text>
						<label>ENABLE</label>
					</text>
					<text>
						<label>OFF</label>
					</text>
					
				</group>
				
				<slider>
					<halign>left</halign>
					<pref-height>50</pref-height>
					<property>f16/avionics/gnd-jett</property>
					<min>0</min>
					<max>1</max>
					<step>1</step>
					<live>true</live>
					<vertical>true</vertical>
					<binding>
						<command>dialog-apply</command>
					</binding>
				</slider>
				
			</group>
		</group>
		
	</group>
	
	<hrule/>

	<text><label>FLIGHT</label></text>

	<group>
	    <layout>hbox</layout>
	    <text><label>ALT FLAPS</label></text>
	    <checkbox>
		    <property>controls/flight/flaps</property>
		    <live>true</live>
		    <binding>
				<command>nasal</command>
				<script>
					setprop("controls/flight/flaps", !getprop("controls/flight/flaps"));
				</script>
	      	</binding>
	    </checkbox>
	    <text><label>MPO</label></text>
	    <checkbox>
		    <property>fdm/jsbsim/fcs/fbw-override</property>
		    <live>true</live>
		    <binding>
				<command>nasal</command>
				<script>
					setprop("fdm/jsbsim/fcs/fbw-override", !getprop("fdm/jsbsim/fcs/fbw-override"));
				</script>
	      	</binding>
	    </checkbox>
	    <text><label>CAT III</label></text>
	    <checkbox>
	      <property>fdm/jsbsim/fcs/fly-by-wire/enable-cat-III</property>
	      <live>true</live>
	        <binding>
	          <command>property-toggle</command>
	          <property>fdm/jsbsim/fcs/fly-by-wire/enable-cat-III</property>
	        </binding>
	    </checkbox>
	    <text><label>LE FLAPS</label></text>
	    <checkbox>
	      <property>f16/avionics/le-flaps-switch</property>
	      <live>true</live>
	        <binding>
	          <command>property-toggle</command>
	          <property>f16/avionics/le-flaps-switch</property>
	        </binding>
	    </checkbox>
	    <empty>
	      <stretch>1</stretch>
	    </empty>
	</group>
	
	<hrule/>
	
	<group>
	    <layout>hbox</layout>
	    <text><label>Refuel door open</label></text>
	    <checkbox>
	      <property>systems/refuel/serviceable</property>
	      <live>true</live>
	        <binding>
	          <command>property-toggle</command>
	          <property>systems/refuel/serviceable</property>
	        </binding>
	    </checkbox>
	</group>
	<text><label>Enable this to open refuel door in order to enable refueling in air. Notice that this will also</label></text>
	<text><label>change how the fly-by-wire reacts to your stick inputs, so that you easier can make minute corrections</label></text>
	<text><label>when close to the tanker.</label></text>
	
	<hrule/>

  

</PropertyList>