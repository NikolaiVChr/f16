									<max>1</max>
									<step>1</step>
									<live>true</live>
									<vertical>true</vertical>
									<pref-height>40</pref-height>
									<binding>
										<command>dialog-apply</command>
									</binding>
								</slider>
								
							</group>
						
						</group>
						
						<vrule/>
						
