			<layout>vbox</layout>
			
			<text>
				<label>A/P</label>
			</text>
			
			<group>
				<layout>table</layout>
				
				<group>
					<visible>
						<less-than>
							<property>/sim/variant-id</property>
							<value>2</value>
						</less-than>
					</visible>
					<row>0</row>
					<col>0</col>
					<layout>table</layout>
					
