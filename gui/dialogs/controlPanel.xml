						<row>0</row>
						<col>0</col>
						<label>Autopilot Master</label>
						<halign>center</halign>
						<live>true</live>
						<property>/f16/fcs/switch-master</property>
						<binding>
							<command>dialog-apply</command>
						</binding>
					</checkbox>
					
					<group>
						<row>1</row>
						<col>0</col>
						<layout>hbox</layout>
						
						<group>
							<layout>vbox</layout>
							
							<text>
								<label>PITCH      </label>
							</text>
							
