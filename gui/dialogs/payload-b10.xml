<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  
  <name>payload-b10</name>
  <modal type="bool">false</modal>
  <draggable>true</draggable>
  <resizable>true</resizable>
  <width>725</width>
  <layout>vbox</layout>
  
  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>
    
    <text>
      <label>Block 10 payload presets</label>
    </text>
    
    <empty>
      <stretch>1</stretch>
    </empty>
    
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>
    <layout>hbox</layout>
    <button>
        <legend>Default load</legend>
        <binding>
          <command>nasal</command>
          <script>pylons.default();</script>
        </binding>
    </button>

    <vrule/>

    <button>
        <legend>Refuel all tanks</legend>
        <binding>
          <command>nasal</command>
          <script>pylons.refuel();</script>
        </binding>
    </button>

    <vrule/>

    <button>
        <legend>Rearm 20mm cannon</legend>
        <binding>
          <command>nasal</command>
          <script>pylons.cannon_load();</script>
        </binding>
    </button>

  <vrule/>

    <button>
        <legend>Smokewinders</legend>
        <binding>
          <command>nasal</command>
          <script>pylons.airshow();</script>
        </binding>
    </button>

  <vrule/>

    <button>
        <legend>Clean load</legend>
        <binding>
          <command>nasal</command>
          <script>pylons.clean();</script>
        </binding>
    </button>
  </group>

  <hrule/>

    <group>
        <layout>table</layout>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>0</col>
            <legend>A/A Training</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.b10_train_aa();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>2</col>
            <legend>Air Superiority (IR)</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.b10_a2a_adf();</script>
            </binding>
        </button>

        <hrule>
            <row>1</row>
            <col>0</col>
            <colspan>6</colspan>
        </hrule>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>4</col>
            <legend>Air Superiority (IR, 2 bags)</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.b10_a2a_adfer();</script>
            </binding>
        </button>

        <hrule>
            <row>3</row>
            <col>0</col>
            <colspan>6</colspan>
        </hrule>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>0</col>
            <legend>A/G Training (2 bags)</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.b10_train_ag();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>2</col>
            <legend>A/G Unguided (Light)</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.b10_a2g_strike1();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>4</col>
            <legend>A/G Unguided (Heavy)</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.b10_a2g_strike2();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>4</row>
            <col>0</col>
            <legend>Ferry Loadout (3 bags)</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ferry1();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>4</row>
            <col>4</col>
            <legend>Ferry Loadout (2 bags XL)</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ferry2();</script>
            </binding>
        </button>

    </group>

    <empty><stretch>1</stretch></empty>
</PropertyList>