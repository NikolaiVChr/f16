<?xml version="1.0" encoding="UTF-8" ?>

<!-- General Dynamics F-16 Autoflight System -->
<!-- (c) 2018 Joshua Davidson (it0uchpods) -->

<PropertyList>

	<name>autopilot</name>
	<layout>table</layout>

	<group>
		<row>0</row>
		<col>0</col>
		<layout>hbox</layout>
		<text>
			<halign>left</halign>
			<label>F-16 Autoflight System</label>
		</text>
		<empty><stretch>1</stretch></empty>
		
		<group>
			<layout>table</layout>
			
			<button>
				<row>0</row>
				<col>0</col>
				<halign>right</halign>
				<pref-width>20</pref-width>
				<pref-height>20</pref-height>
				<legend>?</legend>
				<binding>
					<command>dialog-show</command>
					<dialog-name>autopilot-help</dialog-name>
				</binding>
			</button>
			<button>
				<row>0</row>
				<col>1</col>
				<halign>right</halign>
				<pref-width>20</pref-width>
				<pref-height>20</pref-height>
				<legend>X</legend>
				<key>Esc</key>
				<binding>
					<command>dialog-close</command>
				</binding>
			</button>
		</group>
	</group>
	
	<hrule>
		<row>1</row>
		<col>0</col>
	</hrule>
	
	<group>
		<visible>
			<less-than>
				<property>/sim/variant-id</property>
				<value>2</value>
			</less-than>
		</visible>
		<row>2</row>
		<col>0</col>
		<layout>table</layout>
		
		<checkbox>
			<row>0</row>
			<col>0</col>
			<label>Autopilot Master</label>
			<halign>center</halign>
			<live>true</live>
			<property>/f16/fcs/autopilot-on</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</checkbox>
		
		<hrule>
			<row>1</row>
			<col>0</col>
		</hrule>
		
		<group>
			<row>2</row>
			<col>0</col>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>PITCH      </label>
				</text>
				
				<group>
					<layout>hbox</layout>
			
					<group>
						<layout>vbox</layout>
						<halign>left</halign>
						
						<text>
							<label>ALT HOLD</label>
						</text>
						<text>
							<label>ATT HOLD</label>
						</text>
						
					</group>
					
					<slider>
						<halign>left</halign>
						<property>/f16/fcs/switch-pitch-block15</property>
						<min>0</min>
						<max>1</max>
						<step>1</step>
						<live>true</live>
						<vertical>true</vertical>
						<pref-height>40</pref-height>
						<binding>
							<command>dialog-apply</command>
						</binding>
					</slider>
					
				</group>
			
			</group>
			
			<vrule/>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>ROLL      </label>
				</text>
				
				<group>
					<layout>hbox</layout>
				
					<group>
						<layout>vbox</layout>
						<halign>left</halign>
						
						<text>
							<label>HDG SEL</label>
						</text>
						<text>
							<label>ATT HOLD</label>
						</text>
						
					</group>
					
					<slider>
						<halign>left</halign>
						<property>/f16/fcs/switch-roll-block15</property>
						<min>0</min>
						<max>1</max>
						<step>1</step>
						<live>true</live>
						<vertical>true</vertical>
						<pref-height>40</pref-height>
						<binding>
							<command>dialog-apply</command>
						</binding>
					</slider>
					
				</group>
			
			</group>
			
		</group>
		
	</group>
	
	<group>
		<visible>
			<greater-than-equals>
				<property>/sim/variant-id</property>
				<value>2</value>
			</greater-than-equals>
		</visible>
		<row>2</row>
		<col>0</col>
		<layout>hbox</layout>
		
		<group>
			<layout>vbox</layout>
			
			<text>
				<label>ROLL      </label>
			</text>
			
			<group>
				<layout>hbox</layout>
			
				<group>
					<layout>vbox</layout>
					<halign>left</halign>
					
					<text>
						<label>HDG SEL</label>
					</text>
					<text>
						<label>ATT HOLD</label>
					</text>
					<text>
						<label>STRG SEL</label>
					</text>
					
				</group>
				
				<slider>
					<halign>left</halign>
					<property>/f16/fcs/switch-roll-block20</property>
					<min>-1</min>
					<max>1</max>
					<step>1</step>
					<live>true</live>
					<vertical>true</vertical>
					<binding>
						<command>dialog-apply</command>
					</binding>
				</slider>
				
			</group>
		
		</group>
		
		<vrule/>
		
		<group>
			<layout>vbox</layout>
			
			<text>
				<label>PITCH      </label>
			</text>
			
			<group>
				<layout>hbox</layout>
		
				<group>
					<layout>vbox</layout>
					<halign>left</halign>
					
					<text>
						<label>ALT HOLD</label>
					</text>
					<text>
						<label>A/P OFF</label>
					</text>
					<text>
						<label>ATT HOLD</label>
					</text>
					
				</group>
				
				<slider>
					<halign>left</halign>
					<property>/f16/fcs/switch-pitch-block20</property>
					<min>-1</min>
					<max>1</max>
					<step>1</step>
					<live>true</live>
					<vertical>true</vertical>
					<binding>
						<command>dialog-apply</command>
					</binding>
				</slider>
				
			</group>
		
		</group>
		
	</group>

</PropertyList>
