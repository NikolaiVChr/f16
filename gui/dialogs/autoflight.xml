<!-- General Dynamics F-16 Autoflight System -->
<!-- (c) 2018 Joshua Davidson (it0uchpods) -->

<PropertyList>

	<name>autopilot</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<text>
			<halign>left</halign>
			<label>F-16 Autoflight System</label>
		</text>
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>X</legend>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		
		<group>
			<layout>vbox</layout>
			
			<text>
				<label>ROLL      </label>
			</text>
			
			<group>
				<layout>hbox</layout>
			
				<group>
					<layout>vbox</layout>
					<halign>left</halign>
					
					<text>
						<label>HDG SEL</label>
					</text>
					<text>
						<label>ATT HOLD</label>
					</text>
					<text>
						<label>STRG SEL</label>
					</text>
					
				</group>
				
				<slider>
					<halign>left</halign>
					<property>/f16/fcs/switch-roll</property>
					<min>-1</min>
					<max>1</max>
					<step>1</step>
					<live>true</live>
					<vertical>true</vertical>
					<binding>
						<command>dialog-apply</command>
					</binding>
				</slider>
				
			</group>
		
		</group>
		
		<vrule/>
		
		<group>
			<layout>vbox</layout>
			
			<text>
				<label>PITCH      </label>
			</text>
			
			<group>
				<layout>hbox</layout>
		
				<group>
					<layout>vbox</layout>
					<halign>left</halign>
					
					<text>
						<label>ALT HOLD</label>
					</text>
					<text>
						<label>A/P OFF</label>
					</text>
					<text>
						<label>ATT HOLD</label>
					</text>
					
				</group>
				
				<slider>
					<halign>left</halign>
					<property>/f16/fcs/switch-pitch</property>
					<min>-1</min>
					<max>1</max>
					<step>1</step>
					<live>true</live>
					<vertical>true</vertical>
					<binding>
						<command>dialog-apply</command>
					</binding>
				</slider>
				
			</group>
		
		</group>
		
	</group>

</PropertyList>
