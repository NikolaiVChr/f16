<?xml version="1.0"?>

<PropertyList>

<!--CHOCKS -->

 
<!-- NOSE CHOCKS -->
<model>
 <name>chocks1</name>
 <path>Aircraft/f16/Models/Ramp/chock.ac</path>
 <offsets> 
  <x-m>-3.027</x-m>
  <y-m>-0.00</y-m>
  <z-m>-1.91</z-m>
  <heading-deg>-90</heading-deg>
 </offsets>
</model>

 <animation>
  <type>translate</type>
  <object-name>chocks1</object-name>
  <property>gear/gear[0]/compression-norm</property>
  <factor>0.25</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 
<!-- MAIN LEFT CHOCKS -->
<model>
 <name>chocks2</name>
 <path>Aircraft/f16/Models/Ramp/chocks.ac</path>
 <offsets> 
  <x-m> 0.522</x-m>
  <y-m>-1.30</y-m>
  <z-m>-1.80</z-m>
  <heading-deg>-90</heading-deg>
 </offsets>
</model>

 <animation>
  <type>translate</type>
  <object-name>chocks2</object-name>
  <property>gear/gear[2]/compression-norm</property>
  <factor>0.25</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 
<!-- MAIN RIGHT CHOCKS -->
<model>
 <name>chocks3</name>
 <path>Aircraft/f16/Models/Ramp/chocks.ac</path>
 <offsets> 
  <x-m> 0.522</x-m>
  <y-m>1.30</y-m>
  <z-m>-1.78</z-m>
  <heading-deg>90</heading-deg>
 </offsets>
</model>

<animation>
  <type>translate</type>
  <object-name>chocks3</object-name>
  <property>gear/gear[1]/compression-norm</property>
  <factor>0.25</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <!-- FIRE EXTINGUISHER -->
<model>
 <name>extinguisher</name>
 <path>Aircraft/f16/Models/Ramp/extinguisher.ac</path>
 <offsets> 
  <x-m>7.1</x-m>
  <y-m>-5.35</y-m>
  <z-m>-1.62</z-m>
  <heading-deg>175</heading-deg>
 </offsets>
</model>

<animation>
  <type>translate</type>
  <object-name>extinguisher</object-name>
  <property>gear/gear[1]/compression-norm</property>
  <factor>0.25</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <!-- FUEL TRUCK -->
<model>
 <name>fuel-truck</name>
 <path>Aircraft/f16/Models/Ramp/fuel-truck_f600.xml</path>
 <offsets> 
  <x-m>-3.25</x-m>
  <y-m>-2.1</y-m>
  <z-m>-2.27</z-m>
  <heading-deg>0</heading-deg>
  <pitch-deg>-2.1</pitch-deg>
 </offsets>
</model>

<animation>
  <type>translate</type>
  <object-name>fuel-truck_f600</object-name>
  <object-name>fuel-truck_f600-paint</object-name>
  <property>gear/gear[1]/compression-norm</property>
  <factor>0.5</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <!-- GPU cart -->
<model>
 <name>GPUcart</name>
 <path>Aircraft/f16/Models/Ramp/generic-trailer-GPU.xml</path>
 <offsets> 
  <x-m>-4.5</x-m>
  <y-m>8.00</y-m>
  <z-m>-1.955</z-m>
  <heading-deg>180</heading-deg>
  <pitch-deg>2.2</pitch-deg>
 </offsets>
</model>

<animation>
  <type>translate</type>
  <object-name>GPU</object-name>
  <object-name>GPUbtn</object-name>
  <object-name>lights</object-name>
  <property>gear/gear[1]/compression-norm</property>
  <factor>0.25</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 
 
 
 <animation>
 <type>select</type>
 <object-name>GPUcart</object-name>
 <condition>
   <property>fdm/jsbsim/elec/sources/external-pwr-plugged-in</property>
 </condition>
</animation>

<animation>
 <type>select</type>
 <object-name>chocks1</object-name>
 <object-name>chocks2</object-name>
 <object-name>chocks3</object-name>
 <object-name>extinguisher</object-name>
 <condition>
   <property>controls/gear/brake-parking</property>
   <property>gear/gear[0]/wow</property>
   <property>gear/gear[1]/wow</property>
   <property>gear/gear[2]/wow</property>
   <not>
     <property>engines/engine[0]/running</property>
   </not>
   <less-than>
    <property>velocities/groundspeed-kt</property>
    <value>0.25</value>
   </less-than>
   <!--<not><property>controls/lighting/ext-lighting-panel/anti-collision</property></not>-->
 </condition>
</animation>

<animation>
 <type>select</type>
 <object-name>fuel-truck</object-name>
 <condition>
  <property>controls/gear/brake-parking</property>
   <property>gear/gear[0]/wow</property>
   <property>gear/gear[1]/wow</property>
   <property>gear/gear[2]/wow</property>
   <property>systems/refuel/serviceable</property>
   <value>0</value>
 </condition>
</animation>

</PropertyList>
