<?xml version="1.0"?>
<PropertyList>

<particlesystem>
  <name>flare-smoke</name>
  <texture>flare.png</texture>
  <emissive>true</emissive>
  <lighting>false</lighting>
  
  <offsets>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
   <pitch-deg>90</pitch-deg>
   <roll-deg>90</roll-deg>
  </offsets>

  <attach>world</attach>

  <placer>
   <type>point</type>
  </placer>
  
  <shooter>
   <theta-min-deg>-1</theta-min-deg>
   <theta-max-deg>1</theta-max-deg>
   <phi-min-deg>-1</phi-min-deg>
   <phi-max-deg>1</phi-max-deg>
   <speed-mps>
    <value>0</value>
    <spread>0</spread>
   </speed-mps>
   <rotation-speed>
    <x-min-deg-sec>0</x-min-deg-sec>
    <y-min-deg-sec>0</y-min-deg-sec>
    <z-min-deg-sec>0</z-min-deg-sec>
    <x-max-deg-sec>0</x-max-deg-sec>
    <y-max-deg-sec>0</y-max-deg-sec>
    <z-max-deg-sec>0</z-max-deg-sec>
   </rotation-speed>
  </shooter>
  
  <counter>
   <particles-per-sec>
    <value>30</value>
   </particles-per-sec>
  </counter>
  
  <align>billboard</align>
  
  <particle>
   <start>
    <color>
     <red>
      <value>1</value>
     </red>
     <green>
      <value>1</value>
     </green>
     <blue>
      <value>1</value>
     </blue>
     <alpha>
      <value>1</value>
     </alpha>
    </color>
    <size>
     <value>0.25</value>
    </size>
   </start>
   <end>
    <color>
     <red>
      <value>1</value>
     </red>
     <green>
      <value>1</value>
     </green>
     <blue>
      <value>1</value>
     </blue>
     <alpha>
      <value>0.1</value>
     </alpha>
    </color>
    <size>
     <value>0.1</value>
    </size>
   </end>
   <life-sec>
    <value>1.0</value>
   </life-sec>
   <mass-kg>0.00001</mass-kg>
   <radius-m>0.015</radius-m>
  </particle>
  
  <program>
   <fluid>air</fluid>
   <gravity type="bool">false</gravity>
   <wind type="bool">true</wind>
  </program>
  
</particlesystem>

</PropertyList>

