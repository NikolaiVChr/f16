<?xml version="1.0"?>

<PropertyList>

 <path>fuel-qty-sel.ac</path>

 <animation>
  <type>select</type>
  <object-name>FQS_marker-beacon-on</object-name>
  <condition>
   <or>
    <property>instrumentation/marker-beacon/outer</property>
    <property>instrumentation/marker-beacon/inner</property>
    <property>instrumentation/marker-beacon/middle</property>
    <property>controls/test/test-panel/mal-ind-lts</property>
   </or>
  </condition>
 </animation>
 
    <animation>
        <type>pick</type>
        <object-name>FQS_marker-beacon</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>fqsmb</tooltip-id>
                <label>Color coded runway marker beacon light</label>
            </binding>
        </hovered>
    </animation>

 <!-- Mode knob -->
 <animation>
        <type>knob</type>
        <object-name>FQS_sel-knob</object-name>
        <property>controls/fuel/qty-selector</property>
        <factor>45</factor>
        <offset-deg>0</offset-deg>
        <interval-sec>0.15</interval-sec>
        <center>
         <x-m>0</x-m>
         <y-m>0.0094</y-m>
         <z-m>0.0208</z-m>
        </center>
        <axis>
         <x>-1</x>
         <y>0</y>
         <z>0</z>
        </axis>  
        <increase>
            <binding>
                <command>property-adjust</command>
                <property>controls/fuel/qty-selector</property>
                <step>1</step>
                <min>0</min>
                <max>5</max>
                <wrap>false</wrap>
           </binding>
        </increase>
        <decrease>
            <binding>
                <command>property-adjust</command>
                <property>controls/fuel/qty-selector</property>
                <step>-1</step>
                <min>0</min>
                <max>5</max>
                <wrap>false</wrap>
           </binding>
        </decrease>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>fqs</tooltip-id>
                <label>FUEL QTY SEL</label>
            </binding>
        </hovered>
    </animation>

 <animation>
    <type>select</type>
    <object-name>FQS_sel-knob-right</object-name>
    <object-name>FQS_sel-knob-left</object-name>
    <condition>
    <equals><value>0</value><value>1</value></equals>
  </condition>
 </animation>


 <!-- Ext Fuel Trans Switch -->
 <animation>
  <object-name>FQS_fuel-trans-switch</object-name>
  <type>rotate</type>
  <property>controls/fuel/external-transfer</property>
  <factor>50</factor>
  <center>
   <x-m>0.0059</x-m>
   <y-m>0.0083</y-m>
   <z-m>-0.0298</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <name>ext-trans-toggle</name>
  <type>pick</type>
  <visible>true</visible>
  <object-name>FQS_ext-trans-toggle</object-name>
  <action>
   <button>0</button>
   <binding>
    <command>property-toggle</command>
    <property>controls/fuel/external-transfer</property>
   </binding>
  </action>
 </animation>

 <!--lighting -->
  
 <animation>
  <object-name>FQS_marker-beacon-on</object-name>
  <type>material</type>
  <condition>
    <property>instrumentation/marker-beacon/middle</property>
  </condition>
  <emission>
   <red>1</red>
   <green>1</green>
   <blue>0</blue>
  </emission>
 </animation>
 
 <animation>
  <object-name>FQS_marker-beacon-on</object-name>
  <type>material</type>
  <condition>
    <property>instrumentation/marker-beacon/outer</property>
  </condition>
  <emission>
   <red>0</red>
   <green>0</green>
   <blue>1</blue>
  </emission>
 </animation>
 
 <animation>
  <object-name>FQS_marker-beacon-on</object-name>
  <type>material</type>
  <condition>
    <or>
    <property>controls/test/test-panel/mal-ind-lts</property>
    <property>instrumentation/marker-beacon/inner</property>
  </or>
  </condition>
  <emission>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </emission>
 </animation>

  <effect>
        <inherits-from>Aircraft/f16/Models/Effects/f16panel-left</inherits-from>
        <parameters>
            <implicit-lightmap-enabled type="int">0</implicit-lightmap-enabled>
        </parameters>      
  
        <object-name>FQS_fuel-trans-switch</object-name>
        <object-name>FQS_marker-beacon</object-name>
 </effect>
 
 <effect>
        <inherits-from>Aircraft/f16/Models/Effects/f16panel-left</inherits-from>
        <parameters>
            <implicit-lightmap-threshold-low type="float">0.2</implicit-lightmap-threshold-low>
            <implicit-lightmap-threshold-high type="float">0.7</implicit-lightmap-threshold-high>
        </parameters>
        <!-- objects added to this will have all white in texture lit up green when console is high. They will also get flood light -->
        <object-name>FQS_mount</object-name>
 </effect>
 <effect>
        <inherits-from>Aircraft/f16/Models/Effects/f16panel-knob</inherits-from>
        <parameters>
            <implicit-lightmap-threshold-low type="float">0.2</implicit-lightmap-threshold-low>
            <implicit-lightmap-threshold-high type="float">0.5</implicit-lightmap-threshold-high>
        </parameters>
        <!-- objects added to this will have all white in texture lit up green when console is high. They will also get flood light -->
        <object-name>FQS_sel-knob</object-name> 
 </effect>
</PropertyList>
