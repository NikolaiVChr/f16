    <animation>
        <type>knob</type>
        <object-name>alt-rel-button</object-name>
        <property>controls/flight/alt-rel-button</property>
        <factor>1</factor>
        <drag-direction>vertical</drag-direction>
        <center>
            <x-m>1</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0.15</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <release>
            <binding>
                <command>property-adjust</command>
                <property>controls/flight/alt-rel-button</property>
                <min>0</min>
                <max>0</max>
            </binding>
        </release>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/flight/alt-rel-button</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>autopilot-switch</object-name>
        <property>f16/fcs/autopilot-on</property>
        <factor>45</factor>
        <drag-direction>vertical</drag-direction>
        <axis>
            <object-name>autopilot-switch-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>f16/fcs/autopilot-on</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>laser-arm-switch</object-name>
        <property>controls/armament/laser-arm-dmd</property>
        <factor>60</factor>
        <drag-direction>vertical</drag-direction>
        <axis>
            <object-name>laser-arm-switch-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/armament/laser-arm-dmd</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>master-arm-switch</object-name>
        <condition>
            <or>
                <greater-than>
                    <property>controls/armament/master-arm-cover-open</property>
                    <value>0</value>
                </greater-than>
                <greater-than>
                    <property>sim/variant-id</property>
                    <value>4</value>
                </greater-than>
            </or>
        </condition>
        <property>controls/armament/master-arm</property>
        <factor>45</factor>
        <drag-direction>vertical</drag-direction>
        <axis>
            <object-name>master-arm-switch-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/armament/master-arm</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>pitch-switch-b15</object-name>
        <condition>
            <less-than>
                <property>sim/variant-id</property>
                <value>4</value>
            </less-than>
        </condition>
        <property>f16/fcs/switch-pitch-block15</property>
        <offset-deg>-30</offset-deg>
        <factor>60</factor>
        <drag-direction>vertical</drag-direction>
        <axis>
            <object-name>pitch-switch-b15-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>f16/fcs/switch-pitch-block15</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>roll-switch-b15</object-name>
        <condition>
            <less-than>
                <property>sim/variant-id</property>
                <value>4</value>
            </less-than>
        </condition>
        <property>f16/fcs/switch-roll-block15</property>
        <offset-deg>-30</offset-deg>
        <factor>60</factor>
        <drag-direction>vertical</drag-direction>
        <axis>
            <object-name>roll-switch-b15-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>f16/fcs/switch-roll-block15</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>master-arm-cover</object-name>
        <condition>
            <equals>
                <property>controls/armament/master-arm</property>
                <value>0</value>
            </equals>
        </condition>
        <property>controls/armament/master-arm-cover-open</property>
        <factor>-90</factor>
        <drag-direction>horizontal</drag-direction>
        <axis>
            <object-name>master-arm-cover-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/armament/master-arm-cover-open</property>
                <factor>-1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>quiet-switch</object-name>
        <property>instrumentation/radar/radar-standby</property>
        <offset-deg>30</offset-deg>
        <factor>-60</factor>
        <drag-direction>vertical</drag-direction>
        <axis>
            <object-name>quiet-switch-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/radar/radar-standby</property>
                <factor>-1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>roll-hold-switch</object-name>
        <condition>
            <greater-than-equals>
                <property>sim/variant-id</property>
                <value>4</value>
            </greater-than-equals>
        </condition>
        <property>f16/fcs/switch-pitch-block20</property>
        <factor>45</factor>
        <drag-direction>vertical</drag-direction>
        <axis>
            <object-name>roll-hold-switch-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>f16/fcs/switch-pitch-block20</property>
                <factor>1</factor>
                <min>-1</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>pitch-hold-switch</object-name>
        <condition>
            <greater-than-equals>
                <property>sim/variant-id</property>
                <value>4</value>
            </greater-than-equals>
        </condition>
        <property>f16/fcs/switch-roll-block20</property>
        <factor>45</factor>
        <drag-direction>vertical</drag-direction>
        <axis>
            <object-name>pitch-hold-switch-axis</object-name>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>f16/fcs/switch-roll-block20</property>
                <factor>1</factor>
                <min>-1</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>stby-off</object-name>
        <object-name>stby-on</object-name>
        <object-name>active-on</object-name>
        <object-name>active-off</object-name>
        <object-name>adv-mode-button</object-name>
        <property>f16/fcs/adv-mode-sel</property>
        <factor>1</factor>
        <drag-direction>vertical</drag-direction>
        <center>
            <x-m>1</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0.15</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>f16/fcs/adv-mode-sel</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>select</type>
        <object-name>active-off</object-name>
        <condition>
            <not>
                <or>
                    <property>controls/test/test-panel/mal-ind-lts</property>
                    <greater-than>
                        <property>f16/fcs/adv-mode</property>
                        <value>0</value>
                    </greater-than>
                </or>
            </not>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>active-on</object-name>
        <condition>
            <or>
                <property>controls/test/test-panel/mal-ind-lts</property>
                <greater-than>
                    <property>f16/fcs/adv-mode</property>
                    <value>0</value>
                </greater-than>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>autopilot-switch</object-name>
        <condition>
            <less-than>
                <property>sim/variant-id</property>
                <value>4</value>
            </less-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>block-15</object-name>
        <condition>
            <less-than>
                <property>sim/variant-id</property>
                <value>4</value>
            </less-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>block-50</object-name>
        <condition>
            <greater-than-equals>
                <property>sim/variant-id</property>
                <value>4</value>
            </greater-than-equals>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>ecm-enbl-off</object-name>
        <condition>
            <not>
                <or>
                    <property>controls/test/test-panel/mal-ind-lts</property>
                    <greater-than>
                        <property>controls/armament/ecm-enabled</property>
                        <value>0</value>
                    </greater-than>
                </or>
            </not>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>ecm-enbl-on</object-name>
        <condition>
            <or>
                <property>controls/test/test-panel/mal-ind-lts</property>
                <greater-than>
                    <property>controls/armament/ecm-enabled</property>
                    <value>0</value>
                </greater-than>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>ecm-enbl</object-name>
        <object-name>ecm-enbl-off</object-name>
        <object-name>ecm-enbl-on</object-name>
        <condition>
            <greater-than>
                <property>sim/variant-id</property>
                <value>3</value>
            </greater-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>master-arm-cover</object-name>
        <condition>
            <less-than-equals>
                <property>sim/variant-id</property>
                <value>4</value>
            </less-than-equals>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>pitch-hold-switch</object-name>
        <condition>
            <greater-than-equals>
                <property>sim/variant-id</property>
                <value>3</value>
            </greater-than-equals>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>pitch-switch-b15</object-name>
        <condition>
            <less-than-equals>
                <property>sim/variant-id</property>
                <value>3</value>
            </less-than-equals>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>roll-hold-switch</object-name>
        <condition>
            <greater-than>
                <property>sim/variant-id</property>
                <value>3</value>
            </greater-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>roll-switch-b15</object-name>
        <condition>
            <less-than-equals>
                <property>sim/variant-id</property>
                <value>3</value>
            </less-than-equals>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>stby-off</object-name>
        <condition>
            <not>
                <or>
                    <property>controls/test/test-panel/mal-ind-lts</property>
                    <greater-than>
                        <property>f16/fcs/stby-mode</property>
                        <value>0</value>
                    </greater-than>
                </or>
            </not>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>stby-on</object-name>
        <condition>
            <or>
                <property>controls/test/test-panel/mal-ind-lts</property>
                <greater-than>
                    <property>f16/fcs/stby-mode</property>
                    <value>0</value>
                </greater-than>
            </or>
        </condition>
    </animation>
</PropertyList>

