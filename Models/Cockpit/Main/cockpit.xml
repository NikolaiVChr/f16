<!-- AOA indexer animations -->
 <animation>
  <type>select</type>
  <object-name>down</object-name>
  <condition>
    <or>
    <greater-than>
     <property>orientation/alpha-deg</property>
     <value>15.0</value>
    </greater-than>
    <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
    <greater-than>
    <property>fdm/jsbsim/elec/bus/emergency-dc-1</property>
    <value>20.0</value>
    </greater-than>
   </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>steady</object-name>
  <condition>
    <or>
    <and>
    <greater-than>
     <property>orientation/alpha-deg</property> 
     <value>11.0</value>
    </greater-than>
    <less-than>
     <property>orientation/alpha-deg</property>
     <value>15.0</value>
    </less-than>
    </and>
    <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
    <greater-than>
    <property>fdm/jsbsim/elec/bus/emergency-dc-1</property>
    <value>20.0</value>
    </greater-than>
   </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>up</object-name>
  <condition>
    <or>
    <less-than>
     <property>orientation/alpha-deg</property>
     <value>11.0</value>
    </less-than>
    <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
    <greater-than>
    <property>fdm/jsbsim/elec/bus/emergency-dc-1</property>
    <value>20.0</value>
    </greater-than>
   </condition>
 </animation>
 
<!-- AAR info animations -->
 <animation>
  <type>select</type>
  <object-name>rdy</object-name>
   <condition>
    <or>
      <and><greater-than><property>fdm/jsbsim/elec/bus/emergency-dc-2</property><value>20</value></greater-than>
    <property>/systems/refuel/serviceable</property></and>
    <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
   </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>ar_nws</object-name>
  <condition>
    <or>
    <and><greater-than><property>fdm/jsbsim/elec/bus/emergency-dc-2</property><value>20</value></greater-than>   
      <property>/systems/refuel/contact</property>
      <property>/systems/refuel/serviceable</property>
    </and>
    <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>disc</object-name>
  <condition>
    <or>
      <and><greater-than><property>fdm/jsbsim/elec/bus/emergency-dc-2</property><value>20</value></greater-than>
        <not><property>/systems/refuel/contact</property></not>
        <property>/systems/refuel/serviceable</property>
      </and>
      <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
  </condition>
 </animation>
