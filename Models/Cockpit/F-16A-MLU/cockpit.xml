<!-- AOA indexer animations -->
 <animation>
  <type>select</type>
  <object-name>down</object-name>
  <condition>
    <or>
    <and>
    <property>controls/gear/gear-down</property>
    <greater-than>
     <property>orientation/alpha-deg</property>
     <value>15.0</value>
    </greater-than>
    </and>
    <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
   </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>steady</object-name>
  <condition>
    <or>
    <and>
    <property>controls/gear/gear-down</property>
    <greater-than>
     <property>orientation/alpha-deg</property>
     <value>11.0</value>
    </greater-than>
    <less-than>
     <property>orientation/alpha-deg</property>
     <value>15.0</value>
    </less-than>
    </and>
    <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
   </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>up</object-name>
  <condition>
    <or>
    <and>
    <property>controls/gear/gear-down</property>
    <less-than>
     <property>orientation/alpha-deg</property>
     <value>11.0</value>
    </less-than>
    </and>
    <property>controls/test/test-panel/mal-ind-lts</property>
    </or>
   </condition>
 </animation>
 
<!-- AAR info animations -->
 <animation>
