<?xml version="1.0"?>

<PropertyList>

	<path>rwr.ac</path>

    
    <effect>
        <inherits-from>Aircraft/f16/Models/Effects/model-interior/panel-standard</inherits-from>
        <parameters>
            <implicit-lightmap-enabled type="int">0</implicit-lightmap-enabled>
        </parameters>
        <object-name>mount</object-name>
        <object-name>button</object-name>
    </effect>

    <animation>
        <object-name>bkg</object-name>
        <type>material</type>
        <condition>
            <greater-than-equals>
                <property>f16/avionics/power-ufc-warm</property>
                <value>0.90</value>
            </greater-than-equals>
            <property>f16/ews/ew-rwr-switch</property>
        </condition>
        <emission>
            <red>  1</red>
            <green>1</green>
            <blue> 1</blue>
        </emission>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>button</object-name>
        <property>f16/ews/rwr-int</property>
        <factor>-180</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>  0.003947 </x-m>
            <y-m> -0.033889 </y-m>
            <z-m>  0.030229 </z-m>
        </center>
        <axis>
            <x> 1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
        <increase>
            <binding>
                <command>property-adjust</command>
                <property>f16/ews/rwr-int</property>
                <factor>1</factor>
                <step>0.1</step>
                <min>0.2</min>
                <max>2</max>
                <wrap>false</wrap>
            </binding>
        </increase>
        <decrease>
            <binding>
                <command>property-adjust</command>
                <property>f16/ews/rwr-int</property>
                <factor>1</factor>
                <step>-0.1</step>
                <min>0.2</min>
                <max>2</max>
                <wrap>false</wrap>
            </binding>
        </decrease>
    </animation>
    
</PropertyList>
