    <animation>
        <type>translate</type>
        <object-name>MFDButtonL1</object-name>
        <condition>
            <or>
                <equals>
                    <property>controls/MFD[0]/button-pressed</property>
                    <value>1</value>
                </equals>
                <equals>
                    <property>controls/MFD[0]/button-pressed</property>
                    <value>0</value>
                </equals>
            </or>
        </condition>
        <property>controls/MFD[0]/button-pressed</property>
        <factor>-0.002</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

    </animation>
    <animation>
        <type>knob</type>
        <object-name>MFDButtonL1</object-name>

        <action>
            <binding>
                <command>property-assign</command>
                <property>controls/MFD[0]/button-pressed</property>
                <value>1</value>
            </binding>
        </action>

        <release>
            <binding>
                <command>property-adjust</command>
                <property>controls/MFD[0]/button-pressed</property>
                <step>0</step>
                <min>0</min>
                <max>0</max>
            </binding>
        </release>
    </animation>

