<?xml version="1.0"?>

<!-- Based on F-15 MPCD by Richard Harrison; rjh@zaretto.com  -->

<PropertyList>
    <path>mfd.ac</path>

    <animation>
      <type>translate</type>
      <object-name>scan_marker</object-name>
      <property>instrumentation/radar2/sweep-marker-norm</property>
      <factor>0.0422</factor>
      <axis>
       <x>0</x>
       <y>1</y>
       <z>0</z>
      </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>MPCDImage</object-name>
        <condition>
            <property>sim/model/f16/controls/MPCD/mode</property>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>


    <animation>
        <type>knob</type>
        <object-name>master-arm-switch</object-name>
        <property>sim/model/f16/controls/armament/master-arm-switch</property>
        <offset-deg>-30</offset-deg>
        <factor>60</factor>
        <center>
            <x-m>-5.6962</x-m>
            <y-m>-0.1864</y-m>
            <z-m>0.8802</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>sim/model/f16/controls/armament/master-arm-switch</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>mode-knob</object-name>
        <property>sim/model/f16/controls/MPCD/mode</property>
        <offset-deg>80</offset-deg>
        <factor>-40</factor>
        <center>
            <x-m>-5.6962</x-m>
            <y-m>-0.2597</y-m>
            <z-m>0.8579</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>sim/model/f16/controls/MPCD/mode</property>
                <factor>1</factor>
                <min>0</min>
                <max>2</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

