    <animation>
        <type>knob</type>
        <object-name>MFDButtonCon</object-name>
        <property>f16/avionics/mfd-r-con</property>
        <factor>0</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>  -0.0062 </x-m>
            <y-m>  -0.074119 </y-m>
            <z-m>  -0.023917 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 1.0 </y>
            <z> 0.0 </z>
        </axis>
        <increase>
            <binding>
                <command>property-adjust</command>
                <property>f16/avionics/mfd-r-con</property>
                <factor>1</factor>
                <step>-0.1</step>
                <min>0</min>
                <max>2</max>
                <wrap>false</wrap>
            </binding>
        </increase>
        <decrease>
            <binding>
