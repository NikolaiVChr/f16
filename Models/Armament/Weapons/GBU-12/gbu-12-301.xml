      		<object-name>GBU-12_Wing.001</object-name>
      		<object-name>GBU-12_Wing.002</object-name>
      		<object-name>GBU-12_Wing.003</object-name>
      		<object-name>GBU-12_Wing.004</object-name>
		<condition>
			<property>payload/armament/gbu-12/flags/msl-id-301</property>
		</condition>
	</animation>

	 <animation>
  <type>rotate</type>
  <object-name>GBU-12_Wing.001</object-name>
  <property>payload/armament/gbu-12/flags/deploy-id-301</property>
  <factor>-75</factor>
  <axis>
   <x1-m>0.96767</x1-m>
   <y1-m>-0.20115</y1-m>
   <z1-m>0.19503</z1-m>
   <x2-m>0.96767</x2-m>
   <y2-m>-0.19503</y2-m>
   <z2-m>0.20114</z2-m>
  </axis>
 </animation>
 
 <animation>
  <type>rotate</type>
  <object-name>GBU-12_Wing.002</object-name>
  <property>payload/armament/gbu-12/flags/deploy-id-301</property>
  <factor>75</factor>
  <axis>
   <x1-m>0.96767</x1-m>
   <y1-m>0.20114</y1-m>
   <z1-m>0.19504</z1-m>
   <x2-m>0.96767</x2-m>
   <y2-m>0.19503</y2-m>
