<?xml version="1.0" encoding="iso-8859-1"?>
  
<PropertyList> 

    <path>Aircraft/f16/Models/Armament/Triplerack/trirack_small.xml</path>

    <model>
      <name>Station7_MK82_left</name>
      <path>Aircraft/f16/Models/Armament/Weapons/MK-82/mk82.xml</path>
      <offsets>
        <x-m>-0.35</x-m>
        <y-m>-0.432802</y-m>
        <z-m>-0.231045</z-m>
        <pitch-deg>0</pitch-deg>
        <roll-deg>00</roll-deg>
      </offsets>
    </model>

    <model>
      <name>Station7_MK82_center</name>
      <path>Aircraft/f16/Models/Armament/Weapons/MK-82/mk82.xml</path>
      <offsets>
        <x-m>-0.35</x-m>
        <y-m>0</y-m>
        <z-m>-0.525545</z-m>
        <pitch-deg>0</pitch-deg>
      </offsets>
    </model>

    <model>
      <name>Station7_MK82_right</name>
      <path>Aircraft/f16/Models/Armament/Weapons/MK-82/mk82.xml</path>
      <offsets>
        <x-m>-0.35</x-m>
        <y-m>0.432802</y-m>
        <z-m>-0.231045</z-m>
        <pitch-deg>0</pitch-deg>
        <roll-deg>00</roll-deg>
      </offsets>
    </model>

    <animation>
      <type>select</type>
      <object-name>Station7_MK82_left</object-name>
      <condition><and>
        <equals>
          <property>payload/armament/station/id-6-type</property>
          <value>MK-82</value>
        </equals>
        <greater-than>
          <property>payload/armament/station/id-6-count</property>
          <value>0</value>
        </greater-than></and>
      </condition>
     </animation>

     <animation>
      <type>select</type>
      <object-name>Station7_MK82_right</object-name>
      <condition>
        <and>
        <equals>
          <property>payload/armament/station/id-6-type</property>
          <value>MK-82</value>
        </equals>
        <greater-than>
          <property>payload/armament/station/id-6-count</property>
          <value>1</value>
        </greater-than>
      </and>
      </condition>
     </animation>

     <animation>
      <type>select</type>
      <object-name>Station7_MK82_center</object-name>
      <condition><and>
        <equals>
          <property>payload/armament/station/id-6-type</property>
          <value>MK-82</value>
        </equals>
        <greater-than>
          <property>payload/armament/station/id-6-count</property>
          <value>2</value>
        </greater-than></and>
      </condition>
     </animation>

</PropertyList> 
