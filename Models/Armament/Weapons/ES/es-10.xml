<PropertyList>

  <model>
    <name>gamma1</name>
    <path>Aircraft/f16/Models/Cockpit/pilot/pilot.ac</path>
    <offsets>
      <x-m> 0.0</x-m>
      <y-m> 0.000</y-m>
      <z-m> 1.000</z-m>
    </offsets>
  </model>

  <model> 
    <name>gamma2</name>
    <path>Aircraft/f16/Models/Cockpit/seat/seat.xml</path>
    <offsets>
      <x-m> 0.3959</x-m>
      <y-m> 0.0000</y-m>
      <z-m> 1</z-m>
    </offsets>
  </model>

