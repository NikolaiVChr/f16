  <model>
    <name>gamma3</name>
    <path>Aircraft/f16/Models/Cockpit/pilot/gamma2.xml</path>
  </model>

  <animation>
    <type>rotate</type>
    <object-name>gamma1</object-name>
    <object-name>gamma2</object-name>
    <object-name>gamma3</object-name>
    <offset-deg>90</offset-deg>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0.0000</y-m>
      <z-m> 0.0</z-m>
    </center>
    <axis>
     <x>0</x>
     <y>-1</y>
     <z>0</z>
    </axis>
  </animation>
