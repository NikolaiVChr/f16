  <animation>
    <type>select</type>
    <object-name>gamma2</object-name>
    <condition>
      <less-than>
        <property>payload/armament/es/flags/deploy-id-10</property>
        <value>0.99</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>gamma3</object-name>
    <condition>
      <greater-than>
        <property>payload/armament/es/flags/deploy-id-10</property>
        <value>0.30</value>
      </greater-than>
    </condition>
  </animation>

